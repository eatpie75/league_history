{% extends 'base.html.j2' %}

{% block post_scripts %}
		{%- if debug %}
		<script src='{{STATIC_URL}}debug/player.js' type='text/javascript'></script>
		{% else %}
		<script src="{{STATIC_URL}}js/main.js" type="text/javascript"></script>
		{%- endif %}
		<script type="text/javascript">
			var AJAX_BASE="{{AJAX_BASE}}";
			var account_id={{summoner.account_id}};
			var region={{summoner.region}};
			var num_games={{games.count()}};
		</script>
{%- endblock %}

{% block content %}
			<div class='summoner-header row span12' style='background-image:url({{STATIC_URL}}img/champion-backgrounds/{{stats.by_count()|first|first}}.png)'>
				{#- <div class='pull-left sprite sprite-profile-{{summoner.profile_icon}}'></div> #}
				<div class='pull-left'>{{sprites.profile(summoner.profile_icon, size='large')}}</div>
				<div class='info-block pull-right'>
					<div>
						<b>{{summoner.level}}</b>
						<small>LEVEL</small>
					</div>
					<div>
						<b>{{stats.display_count}}</b>
						<small>GAMES</small>
					</div>
				</div>
				<div class='name-block'>
					<b>{{summoner.name}}</b>
					{#- <span id='spectate-info'><a href='{{spectate.url}}'>{{spectate.player_info(summoner.region, summoner.account_id)}}</a></span> #}
				</div>
				<div class='league-block'>
					{%- if rating.tier %}
					<img src='{{STATIC_URL}}img/leagues/{{rating.tier}}-{{rating.division}}.png' title='Division {{rating.division}} {{rating.get_tier_display()}}'>
					<b>{{rating.get_division_display()}}</b>
					{%- else %}
					<img src='{{STATIC_URL}}img/leagues/0.png' title='Unranked'>
					{%- endif %}
				</div>
				<div class='bottom-right' id='last-updated-block'>
					{%- if not update_in_queue and summoner.time_updated|timediff > 60*30 %}
					<a href='javascript:void(0);' id='force-update'>
						<small id='last-updated'>LAST UPDATED:{% if not update_in_queue %}{{summoner.time_updated|naturaltime|upper}}{% else %}{{update_in_queue}}{% endif %}</small>
					</a>
					{%- else %}
					<small id='last-updated'>LAST UPDATED:{% if not update_in_queue %}{{summoner.time_updated|naturaltime|upper}}{% else %}{{update_in_queue}}{% endif %}</small>
					{%- endif %}
				</div>
				<ul class='mynav mynav-tabs'>
					<li><a href='{{summoner.get_absolute_url()}}'>OVERVIEW</a></li>
					<li><a href='{{summoner.get_games_url()}}'>GAMES</a></li>
					<li class='active'><a href='{{summoner.get_champions_url()}}'>CHAMPIONS</a></li>
				</ul>
			</div>
			<div class='row span12' id='games'>
				<table class='table table-condensed' style='table-layout:fixed;'>
					<thead>
						<tr>
							<th style='width:95px;' class='table-sort' data-column='name'><span>CHAMPION<i></i></span></th>
							<th style='width:68px;' class='table-sort active' data-column='total'><span>PLAYED<i class='icon-arrow-down'></i></span></th>
							<th style='width:70px;' class='table-sort' data-column='won'><span>WON<i></i></span></th>
							<th style='width:50px;' class='table-sort' data-column='lost'><span>LOST<i></i></span></th>
							<th style='width:55px;' class='table-sort' data-column='percent' data-spec-order='swin'><span>WIN %<i></i></span></th>
							<th style='width:90px;' class='table-sort' data-column='avg_kills'><span>AVG KILLS<i></i></span></th>
							<th style='width:142px;' class='table-sort' data-column='avg_deaths'><span>AVG DEATHS<i></i></span></th>
							<th style='' class='table-sort' data-column='kdr'><span>KDR<i></i></span></th>
							<th style='width:95px;' class='table-sort' data-column='avg_cs'><span>AVG CS<i></i></span></th>
							<th class='table-sort' data-column='avg_gold'><span>AVG GOLD<i></i></span></th>
						</tr>
					</thead>
					<tbody class='cbody'>{% for champ in stats.by_count() %}
						<tr class='sort'>
							<td class='name'>{{champions[champ.0]}}</td>
							<td class='total'>{{champ.1.count}}</td>
							<td class='won'>{{champ.1.won}}</td>
							<td class='lost'>{{champ.1.lost}}</td>
							<td class='percent'>{{champ.1.won|get_percent(champ.1.count)}}</td>
							<td class='avg_kills'>{{champ.1.avg_kills}}</td>
							<td class='avg_deaths'>{{champ.1.avg_deaths}}</td>
							<td class='kdr'>{{champ.1.kdr}}</td>
							<td class='avg_cs'>{{champ.1.avg_cs}}</td>
							<td class='avg_gold'>{{champ.1.avg_gold}}</td>
						</tr>
					{% endfor %}</tbody>
				</table>
			</div>
{%- endblock %}
