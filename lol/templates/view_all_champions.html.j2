{% extends 'base.html.j2' %}

{% block post_scripts %}
		<script src="{{STATIC_URL}}js/player.js" type="text/javascript"></script>
{%- endblock %}

{% block content %}
			<div class='summoner-header row span12'>
				<div class='info-block pull-right'>
					<div>
						<b>{% if not generating %}{{stats.display_count}}{% else %}?{% endif %}</b>
						<small>GAMES</small>
					</div>
				</div>
				<div class='name-block'>
					<b>ALL CHAMPIONS</b>
				</div>
				<div class='bottom-right'>
					<form method='get' id='stat-filter' class='form-inline'>{{form.game_map.as_widget()}} {{form.game_mode.as_widget()}}</form>
				</div>
			</div>{% if not generating %}
			<div class='row span12' id='games'>
				<table class='table table-condensed table-sorted' style='table-layout:fixed;'>
					<thead>
						<tr>
							<th style='width:95px;' class='table-sort active' data-column='name'><span>CHAMPION<i class='icon-arrow-down'></i></span></th>
							<th style='width:68px;' class='table-sort' data-column='total'><span>PLAYED<i></i></span></th>
							<th style='width:70px;' class='table-sort' data-column='won'><span>WON<i></i></span></th>
							<th style='width:50px;' class='table-sort' data-column='lost'><span>LOST<i></i></span></th>
							<th style='width:55px;' class='table-sort' data-column='percent'><span>WIN %<i></i></span></th>
							<th style='width:90px;' class='table-sort' data-column='avg_kills'><span>AVG KILLS<i></i></span></th>
							<th style='width:142px;' class='table-sort' data-column='avg_deaths'><span>AVG DEATHS<i></i></span></th>
							<th style='' class='table-sort' data-column='kdr'><span>KDR<i></i></span></th>
							<th style='width:95px;' class='table-sort' data-column='avg_cs'><span>AVG CS<i></i></span></th>
							<th class='table-sort' data-column='avg_gold'><span>AVG GOLD<i></i></span></th>
						</tr>
					</thead>
					<tbody class='cbody'>{% for champ in stats.by_name() %}
						<tr class='sort'>
							<td class='name'><a href="{{ url("view_champion", champion_id=champ.0, champion_slug=champions[champ.0]|slugify) }}">{{champions[champ.0]}}</a></td>
							<td class='total'>{{champ.1.count}}</td>
							<td class='won'>{{champ.1.won}}</td>
							<td class='lost'>{{champ.1.lost}}</td>
							<td class='percent'>{{champ.1.won|get_percent(champ.1.count)}}</td>
							<td class='avg_kills'>{{champ.1.avg_kills}}</td>
							<td class='avg_deaths'>{{champ.1.avg_deaths}}</td>
							<td class='kdr'>{{champ.1.kdr}}</td>
							<td class='avg_cs'>{{champ.1.avg_cs}}</td>
							<td class='avg_gold'>{{champ.1.avg_gold}}</td>
						</tr>
					{% endfor %}</tbody>
				</table>
			</div>{{stats.index.global_stats.blue_side.won|get_percent(stats.index.global_stats.blue_side.won+stats.index.global_stats.blue_side.lost)}}{% else %}
			STATS ARE BEING COMPILED
			{% endif %}
{%- endblock %}
