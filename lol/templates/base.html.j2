{% import 'macros/sprites.html.j2' as sprites with context -%}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{% block title %}index{% endblock %}</title>
		{%- block resources %}
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		{%- block css %}
		<link href="{{STATIC_URL}}css/bootstrap.css" rel="stylesheet" type="text/css">
		{%- if debug %}
		<link href="{{STATIC_URL}}less/main.less" rel="stylesheet/less" type="text/css">
		<script src="{{STATIC_URL}}js/less.js" type="text/javascript"></script>
		{% else%}
		<link href="{{STATIC_URL}}css/main.css" rel="stylesheet" type="text/css">
		{% endif -%}
		<link href="{{STATIC_URL}}css/sprites.css" rel="stylesheet" type="text/css">
		{%- block extra_css %}{% endblock %}
		{%- endblock %}
		{%- block scripts %}
		{%- block pre_scripts %}{% endblock %}
		<script src="{{STATIC_URL}}js/jquery.min.js" type="text/javascript"></script>
		<script src="{{STATIC_URL}}js/bootstrap.min.js" type="text/javascript"></script>
		{%- block post_scripts %}{% endblock %}
		{%- endblock %}
		{%- endblock %}
	</head>
	<body>
		{%- block body %}
		<div class='container'>
			{%- block content %}{% endblock %}
		</div>
		{%- endblock %}
	</body>
</html>
